{
  "name": "solr-rrr",
  "version": "0.0.5",
  "type": "module",
  "license": "UNLICENSED",
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "extensions": "ts,tsx,scss",
      "quiet": false
    }
  },
  "scripts": {
