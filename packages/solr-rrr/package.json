    "@reduxjs/toolkit": "^2.2.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "jest": "^29.7.0",
    "npm-watch": "^0.11.0",
    "react-redux": "^9.1.1",
    "redux-observable": "^3.0.0-rc.2",
    "rxjs": "^7.8.1",
